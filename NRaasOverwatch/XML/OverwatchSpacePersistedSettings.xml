<?xml version="1.0" encoding="utf-8"?>
<base>
  <Current_Tuning>
    <kTestingCheatsEnabled value="False">
      <!--Whether to enable Testing Cheats on load-up-->
    </kTestingCheatsEnabled>
    <kAffectActiveLot value="False">
      <!--Whether certain actions affect the active lot-->
    </kAffectActiveLot>
    <kResetAllGnomes value="True">
      <!--Whether to reset all errant gnomes on a nightly basis-->
    </kResetAllGnomes>
    <kDeleteAllMagicGnomes value="False">
      <!--Whether to delete all magic gnomes in the world on a nightly basis-->
    </kDeleteAllMagicGnomes>
    <kTurnOffStereos value="True">
      <!--Whether to turn off all stereos nightly-->
    </kTurnOffStereos>
    <kTurnOffTelevisions value="True">
      <!--Whether to turn off all televisions nightly-->
    </kTurnOffTelevisions>
    <kRecoverMissingSims value="True">
      <!--Whether to periodically recover any missing residents-->
    </kRecoverMissingSims>
    <kRecoverStrandedToddlers value="True">
      <!--Whether to periodically return all toddlers to the their home lot-->
    </kRecoverStrandedToddlers>
    <kKillAllHomeless value="False">
      <!--Whether to periodically eliminate all the homeless in town-->
    </kKillAllHomeless>
    <kPurgeGeneticHair value="False">
      <!--Whether to remove the genetic hair-style from all sims-->
    </kPurgeGeneticHair>
    <kCleanupGenealogy value="True">
      <!--Whether to perform a genealogy cleanup and repair on load-up-->
    </kCleanupGenealogy>
    <kCleanupConcert value="True">
      <!--Whether to cancel invalid player-held concerts nightly-->
    </kCleanupConcert>
    <kCleanupInventory value="True">
      <!--Whether to sell off items that say they are in an inventory, but actually are not-->
    </kCleanupInventory>
    <kCleanupVehicles value="True">
      <!--Whether to remove orphaned vehicles on a nightly basis-->
    </kCleanupVehicles>
    <kCleanupLaundromat value="True">
      <!--Whether to periodically reset any community laundry machines-->
    </kCleanupLaundromat>
    <kCleanupSinged value="True">
      <!--Whether to remove duplicated singed outfits off sims-->
    </kCleanupSinged>
    <kCleanupSkillModifiers value="True">
      <!--Whether to reset obviously bogus skill modifiers back to base-line-->
    </kCleanupSkillModifiers>
    <kCleanupElevators value="True">
      <!--Whether to periodically reset any elevators in town-->
    </kCleanupElevators>
    <kCleanupAging value="True">
      <!--Whether to periodically correct aging in town-->
    </kCleanupAging>
    <kCleanseTheDead value="False">
      <!--Whether to periodically remove all unnecessary urnstones from the mausoleum-->
    </kCleanseTheDead>
    <kShowSimMenu value="True">
      <!--Whether to display the interactions in the Sim menu-->
    </kShowSimMenu>
    <kShowNotices value="True">
      <!--Whether to display the nightly alarm notifications-->
    </kShowNotices>
    <kLogging value="False">
      <!--Whether to log the results of any actions performed-->
    </kLogging>
    <kStoredCommands value="buydebug, moveobjects on, moveobjects off, unlockoutfits on">
      <!--Comma delimited list of console commands-->
    </kStoredCommands>
    <kAlarmCommands value="">
      <!--Comma delimited list of commands to run nightly-->
    </kAlarmCommands>
    <kAutoCommands value="">
      <!--Comma delimited list of commands to run on load-up-->
    </kAutoCommands>
    <kAlarmHour value="3">
      <!--Hour at which to run the nightly alarm-->
    </kAlarmHour>

    <kStuckCheck value="True">
      <!--Whether to check for stuck sims each night-->
    </kStuckCheck>
    <kStuckCheckReset value="True">
      <!--Whether to automatically reset sims found to be stuck-->
    </kStuckCheckReset>
    <kStopPetAdoption value="False">
      <!--Whether to disable the neighborhood pet adoption system-->
    </kStopPetAdoption>
    <kRestartDigitalPhotos value="True">
      <!--Whether to toggle digital picture frames off and on again each night-->
    </kRestartDigitalPhotos>
    <kResetCheck value="True">
      <!--Whether to check conditions that require a reset-->
    </kResetCheck>
    <kReportFirstResetCheck value="True">
      <!--Whether to notify on the first reset check-->
    </kReportFirstResetCheck>
    <kInstantationCheck value="True">
      <!--Whether to check whenever a sim is instantiated and see whether they should in-game or not-->
    </kInstantationCheck>
    <kCleanupSituations value="True">
      <!--Whether to clean up broken situations on a nightly basis-->
    </kCleanupSituations>
    <kCleanupRelationships value="True">
      <!--Whether to clean up broken relationships on a nightly basis-->
    </kCleanupRelationships>

    <kCompressFamilyLevel value="0">
      <!--Minimum family tree depth to initiate an automatic compression of a dead sim-->
    </kCompressFamilyLevel>
    <kMinimumRouteFail value="10">
      <!--Minimum number of route failures in a row to force a reset-->
    </kMinimumRouteFail>
    <kRouteFailTestMinutes value="30">
      <!--The number of sim-minutes from the start of the route failure to when the sim will be reset-->
    </kRouteFailTestMinutes>

    <kCleanupVehiclesHourly value="False">
      <!--Whether to cleanup vehicles hourly-->
    </kCleanupVehiclesHourly>
    <kDisableFullMoonLighting value="False">
      <!--Whether to disable the full moon lighting effect-->
    </kDisableFullMoonLighting>
  </Current_Tuning>
</base>
